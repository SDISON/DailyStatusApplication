@model DailyStatus.Models.Login
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (@Html.BeginForm())
{
<div class="container">
    <div class="row">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Email, "Check Email , it must be @watchguard.com")
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" ,@type="password"})
        @Html.ValidationMessageFor(m=>m.Password, "Password length less than 8")
    </div>
    <br>
    <div class="row">

        
            <button class="btn btn-primary" type="submit">LogIn</button>
        

    </div>
</div>
}

@section scripts{
    <script>
        var status = "@ViewBag.Status";
        if (status == "Not Registered")
            toastr.error("Not Registered");
        else if (status == "Wrong Credentials")
            toastr.error("Wrong Credentials");
        </script>
    }